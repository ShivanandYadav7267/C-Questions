/* 12.Hollow pyramid

 *
 * *
 *   *
 *     *
 * * * * *

int main()
{
    int n;
    cout << "Give the number : ";
    cin >> n;
    for (int row = 0; row < n; row++)
    {
        for (int col = 0; col <= row; col++)
        {
            if (col == 0 || col == row || row == n - 1)
            {
                cout << "* ";
            }
            else
            {
                cout << "  ";
            }
        }
        cout << endl;
    }

    return 0;
}
 */

/* 13.Hollow Inverted half pyramid
* * * * * 
*     *
*   *
* *
*

int main()
{
    int num;
    cout << "Give the number : ";
    cin >> num;
    for (int row = 1; row <= num; row++)
    {
        for (int col = 0; col <=num - row; col++)
        {
            if (col == 0 || row == 1 || col == num - row )
            {
                cout << "* ";
            }
            else
            {
                cout << "  ";
            }
        }
        cout << endl;
    }
    return 0;
}
*/

/* 14.Numeric half pyramid
